<div class="flex main-bg-color color-white justify-center align-center justify-between height-40px">
  <button type="button" class="hamburger-button">&#8801;</button>
  <h2>Categories</h2>
  <div class="actions color-white">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 height-20px ml-20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
  </div>
</div>
<%= render "shared/menu"%>
<div class="container flex column gap-10">  
  <%@categories.each do |category|%>
  <a href=<%=entity_index_path(category_id: category.id )%> class="text">
    <div class="flex justify-between padding-20 color-bg-white">
      <% if category.image.attached?%>
        <%= image_tag(category.image.representation(resize_to_limit: [100, 100]), class:"rounded img-w60 flex-1") %>
      <%else%>
        <img src=<%=image_path("save-money.png")%> class="rounded img-w60 flex-1"/>
       <%end%>
      <div class="flex align-center flex-3 justify-between padding-20">
        <p class="font-large text-color text"> <%=category.name%> </p>
        <p class="bold text text-color" >  <%=number_to_currency category.entities.where(user: current_user).sum(:amount)%> </p>
      </div>
    </div>
  <a/>
  <%end%>
</div>
 <%=button_to 'Add Category', categories_new_path, method: :get,
    class:'btn color-white second-bg-color padding-10 width-100 height-70px'%>

