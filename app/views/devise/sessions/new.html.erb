
<div class="container">
  <%= form_for(resource, as: resource_name, 
  data: { turbo: false }, 
  url: session_path(resource_name)) do |f| %>
  <div class="flex main-bg-color color-white justify-center align-center justify-between height-40px">
    <%= link_to "ðŸ¡„", root_path, method: :get, class:"back ml-10" %>
    <h2>Log in</h2>
    <div class="actions color-white mr-10">
      <%= f.submit "Log in" %>
    </div>
  </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
   
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>
    <div class="field">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
     <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>
</div>

