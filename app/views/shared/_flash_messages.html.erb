<% flash.each do |key, message|%>
  <div data-controller="flash" 
    class="fixed flex bottom-5 right-5 <%=css_for_flash(key)%> rounded padding-20 color-white align-center height-40px">
    <%=message%>
    <button type="button" data-action="flash#dismiss" class="btn color-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 height-20px ml-20" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      </button>
  </div>
<%end%>